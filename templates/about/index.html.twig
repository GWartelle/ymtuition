{% extends 'base.html.twig' %}

{% block title %}About Page{% endblock %}

{% block body %}
<style>
.example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font: 18px/1.5 sans-serif;
}
.example-wrapper code {
    background: #f5f5f5;
    padding: 2px 6px;
}
</style>

<div class="example-wrapper">
    <h1>Fruit Prices</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Fruit</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            {% for i in 0..(fruits|length - 1) %}
                <tr>
                    <td>{{ fruits[i] }}</td>
                    <td>{{ prices[i] }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
