{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1>Add a New Product</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.name, 'Product Name') }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.price, 'Product Price') }}
            {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.price) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.description, 'Product Description') }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
            {{ form_errors(form.description) }}
        </div>


        <div class="mb-3">
            {{ form_label(form.shortDescription, 'Product Short Description') }}
            {{ form_widget(form.shortDescription, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.shortDescription) }}
        </div>


        <div class="mb-3">
            {{ form_label(form.quantity, 'Product Quantity') }}
            {{ form_widget(form.quantity, {'attr': {'class': 'form-control'         }}) }}
            {{ form_errors(form.quantity) }}
        </div>

        <div class="mb-3">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}