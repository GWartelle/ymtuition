{% extends 'base.html.twig' %}

{% block title %}User List{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center text-primary">Standard Loop</h1>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Birthdate</th>
                <th>Address</th>
                <th>Super Hero</th>
                <th>About</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.lastname|upper }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.birthdate|date("d/m/Y") }}</td>
                    <td>{{ user.address }}</td>
                    <td>
                        {% if user.isSuperHero %}
                            <span class="badge bg-success">Yes</span>
                        {% else %}
                            <span class="badge bg-secondary">No</span>
                        {% endif %}
                    </td>
                    <td>{{ user.about }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <h1 class="text-center text-warning mt-5">Conditional Loop (Only Superheroes)</h1>

    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Birthdate</th>
                <th>Address</th>
                <th>About</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                {% if user.isSuperHero %}
                <tr class="table-success">
                    <td>{{ user.lastname|upper }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.birthdate|date("d/m/Y") }}</td>
                    <td>{{ user.address }}</td>
                    <td>{{ user.about }}</td>
                </tr>
                {% endif %}
            {% endfor %}
        </tbody>
    </table>
    <div class="card p-4">
        {% if lorem|length > 1000 %}
            {{ lorem|u.truncate(1000) }} ...
        {% else %}
            {{ lorem }}
        {% endif %}
    </div>
</div>
{% endblock %}
