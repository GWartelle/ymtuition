{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1>Add a New User</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.firstname, 'User Firstname') }}
            {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.firstname) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.lastname, 'User Lastname') }}
            {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.lastname) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.email, 'User Email') }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email) }}
        </div>


        <div class="mb-3">
            {{ form_label(form.roles, 'User Roles') }}
            {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.roles) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.birthdate, 'User Birthdate') }}
            {{ form_widget(form.birthdate, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.birthdate) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.password, 'User Password') }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.password) }}
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    {{ form_end(form) }}
</div>
{% endblock %}